* {
    bg-col:        #1d2021;
    bg-col-light:  #282828;
    border-col:    #3c3836;
    selected-col:  #504945;
    blue:          #458588;
    fg-col:        #ebdbb2;
    fg-col2:       #fb4934;
    grey:          #928374;

    width: 600;
    font: "IBM Plex Mono 10";
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    height: 360px;
    border: 3px;
    border-color: @border-col;
    background-color: @bg-col;
}

mainbox {
    background-color: @bg-col;
}

inputbar {
    children: [prompt,entry];
    background-color: @bg-col;
    border-radius: 5px;
    padding: 2px;
}

prompt {
    background-color: @blue;
    padding: 6px;
    text-color: @bg-col;
    border-radius: 3px;
    margin: 20px 0px 0px 20px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 6px;
    margin: 20px 0px 0px 10px;
    text-color: @fg-col;
    background-color: @bg-col;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 0px 0px 20px;
    columns: 2;
    lines: 5;
    background-color: @bg-col;
}

element {
    padding: 5px;
    background-color: @bg-col;
    text-color: @fg-col  ;
}

element-icon {
    size: 25px;
}

element selected {
    background-color:  @selected-col ;
    text-color: @fg-col2  ;
}

mode-switcher {
    spacing: 0;
  }

button {
    padding: 10px;
    background-color: @bg-col-light;
    text-color: @grey;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
  background-color: @bg-col;
  text-color: @blue;
}

message {
    background-color: @bg-col-light;
    margin: 2px;
    padding: 2px;
    border-radius: 5px;
}

textbox {
    padding: 6px;
    margin: 20px 0px 0px 20px;
    text-color: @blue;
    background-color: @bg-col-light;
}

/*******************************************************
 * ROFI Gruvbox Dark (structure preserved)
 *******************************************************/
* {
    selected-normal-foreground:  rgba ( 40, 40, 40, 100 % );   /* #282828 */
    foreground:                  rgba ( 235, 219, 178, 100 % );/* #ebdbb2 */
    normal-foreground:           @foreground;

    alternate-normal-background: rgba ( 60, 56, 54, 100 % );  /* #3c3836 */

    red:                         rgba ( 204, 36, 29, 100 % );  /* #cc241d */

    selected-urgent-foreground:  rgba ( 235, 219, 178, 100 % );/* #ebdbb2 */

    blue:                        rgba ( 69, 133, 136, 100 % ); /* #458588 */

    urgent-foreground:           rgba ( 251, 73, 52, 100 % );  /* #fb4934 */

    alternate-urgent-background: rgba ( 80, 73, 69, 100 % );  /* #504945 */

    active-foreground:           rgba ( 131, 165, 152, 100 % );/* #83a598 */

    lightbg:                     rgba ( 235, 219, 178, 100 % );/* #ebdbb2 */

    selected-active-foreground:  rgba ( 40, 40, 40, 100 % );   /* #282828 */

    alternate-active-background: rgba ( 80, 73, 69, 100 % );  /* #504945 */

    background:                  rgba ( 40, 40, 40, 95 % );   /* #282828 */

    alternate-normal-foreground: @foreground;

    normal-background:           @background;

    lightfg:                     rgba ( 168, 153, 132, 100 % );/* #a89984 */

    selected-normal-background:  rgba ( 250, 189, 47, 100 % ); /* #fabd2f */

    border-color:                rgba ( 146, 131, 116, 100 % );/* #928374 */

    spacing:                     2;

    separatorcolor:              rgba ( 29, 32, 33, 100 % );  /* #1d2021 */

    urgent-background:           rgba ( 60, 56, 54, 100 % );  /* #3c3836 */

    selected-urgent-background:  rgba ( 204, 36, 29, 100 % ); /* #cc241d */

    alternate-urgent-foreground: @urgent-foreground;

    background-color:            rgba ( 0, 0, 0, 0 % );

    alternate-active-foreground: @active-foreground;

    active-background:           rgba ( 60, 56, 54, 100 % );  /* #3c3836 */

    selected-active-background:  rgba ( 184, 187, 38, 100 % );/* #b8bb26 */
}

