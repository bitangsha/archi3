#bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
#bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
#bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status


bindsym XF86AudioRaiseVolume exec --no-startup-id ~/.config/i3/scripts/volume_slider.sh up
bindsym XF86AudioLowerVolume exec --no-startup-id ~/.config/i3/scripts/volume_slider.sh down
bindsym XF86AudioMute exec --no-startup-id ~/.config/i3/scripts/volume_slider.sh toggle



# Play / Pause, Stop, Next, Previous buttons on Keyboard - Install playerctl
